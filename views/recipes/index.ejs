<%- include('../partials/header') %>

<table id="list">
    <thead>
        <tr>
        <th>Title</th>
        <th>Prep Time:</th>
        <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        <% recipes.forEach(function(r, index) { %>
        <tr>
            <td><%= r.title %></td>
            <td><%= r.prepTime %>min</td>
            <td><%= avgRatings[index] ? avgRatings[index].toFixed(1) : 'No Rating' %></td>
            <td><a href="/recipes/<%= r._id %>">INGREDIENTS</a></td>  
            <td>
                <% if(user && r.user == user.id) { %>
                <form action="/recipes/<%= r._id %>?_method=DELETE" method="POST">
                    <button>
                        <i class="material-icons">delete</i>
                    </button>
                </form>
                <% } %>
            </td> 
        </tr>
        <% }); %>
    </tbody>
</table>



<%- include('../partials/footer') %>